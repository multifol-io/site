@page "/"
@inject IAppData appData
@inject NavigationManager Navigation
@using Models

@if (new Uri(Navigation.Uri).Host == "bogle.tools")
{
    <PageTitle>
    bogle.tools (OBSOLETE)
    </PageTitle>
}
else
{
    <PageTitle>
    MultiFol.io
    </PageTitle>
}

<div style=float:left>
    <h4 style="max-width:450px">
        @pageHeading <h6 style=display:inline>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;[@appData.CurrentProfileName profile]</h6>
    </h4>
</div>
<div style=clear:left;margin-left:1.5in><a href=/profiles @onclick=navWithBackStack @onclick:preventDefault >(manage profiles)</a></div>

<p style=clear:left>
    <a href='portfolio-tracker'>
        <span style="margin:3px;font-Size:24pt">📈</span>
        Portfolio Tracker</a><br/>
        organize and analyze your portfolio
</p>
<p>
    <a href='savings-planner'>
        <span style="margin:3px;font-Size:24pt">💰</span>
        Savings Planner</a><br/>
        plan your annual savings
</p>
<hr/>
<p>
    <a href='/portfolio-tracker/view/editor'>
        <span style="margin:3px;font-Size:24pt">✏️</span>
        Edit Accounts / Holdings</a><br/>
</p>
<p>
    <a href='/import'>
        <span style="margin:3px;font-Size:24pt">⬆️</span>
        Import Center</a><br/>
        <span style="foreground:black">import CSV files from Fidelity, Schwab, Vanguard, ...</span>
</p>        
<p>
    <a href='/export'>
        <span style="margin:3px;font-Size:24pt">⬇️</span>
        Export Center</a><br/>
        <span style="foreground:black">export portfolio to Excel, Sheets, or CSV</span>
</p>        
<p>
    <a href='/profiles'>
        <span style="margin:3px;font-Size:24pt">🧑‍🦳🧑‍🦰👵</span>
        Multiple Portfolios</a><br/>
</p>
<p>
    <a href='help'>
        <span style="margin:3px;font-Size:24pt">🔭</span>
        Help/FAQ</a><br/>
</p>

<hr/>
<p>
    <a href='portfolio-review'>
        <span style="margin:3px;font-Size:24pt">🧐</span>
        Portfolio Review</a><br/>
        gather more info, and ask questions on bogleheads.org forum
</p>
<p>
    <a href='rsu-tracker'>
        <span style="margin:3px;font-Size:24pt">🔮</span>
        RSU Tracker</a><br/>
        track Restricted Stock Unit grants
</p>
<br/>
<p>"Take charge of your savings!"</p>

@code {
    private void navWithBackStack()
    {
        appData.LastPageUri = Navigation.Uri;
        Navigation.NavigateTo("/profiles");
    }

    private string pageHeading = "MultiFol.io";
}